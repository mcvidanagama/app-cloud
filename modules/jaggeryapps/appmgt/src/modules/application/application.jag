        }
    }
    return false;
}

var isTagExist = function(versionKey, tagKey) {
    var tags = getTags(versionKey);

    for (var i = 0; i < tags.length; i++) {
        if (tags[i]["key"] == tagKey) {
            return true;
        }
    }
    return false;
}
